                <p class="section-intro__title">Information</p>
                <h2 class="primary-text">Check Out the Trees</h2>
                <img src="img/home/section-style.png" alt="">
            </div>
            <div class="row">
                <% trees.forEach(tree => { %>
                <!--           <div class="d-lg-flex justify-content-between"> -->
                <div class="col-lg-4">
                    <div class="card-feature text-center mb-5 mb-lg-0">
                        <img src="img/trees/card-tree.jfif" class="card-img-top" alt="">
                        <div class="card-body">
                            <h3 class="card-title">Tree <%= tree.name %> </h3>
                            <a class="btn btn-outline-info" href="tree/<%= tree._id %>">Details</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 text-center">
